{
  "html": {
    "formatter": {
      "enabled": true
    },
    "experimentalFullSupportEnabled": true
  },
  "javascript": {
    "jsxRuntime": "reactClassic"
  },
  "files": {
    "includes": [
      "examples/**",
      "!examples/**/node_modules",
      "!examples/**/dist",
      "src/**",
      "test/**"
    ]
  },
  "linter": {
    "includes": [
      "examples/**",
      "!examples/**/node_modules",
      "!examples/**/dist",
      "src/**",
      "test/**"
    ]
  },
  "overrides": [
    {
      "includes": ["**/*.astro", "**/*.vue"],
      "linter": {
        "rules": {
          "correctness": {
            "noUnusedVariables": "off",
            "noUnusedImports": "off"
          }
        }
      }
    }
  ]
}
